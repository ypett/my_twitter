<h2 style="text-align: center;">Table of Tweets</h2>
<div class="panel panel-default" style="padding-left: 20px; padding-right: 20px; padding-top: 20px;">
  <!-- Default panel contents -->
  <div class="panel-heading">

    <table class="table table-striped table-hover well well-lg">
      <thead>
        <tr>
          <th>Message</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.message.html_safe %></td>
            <!-- <td><%= tweet.user.username %></td> -->
            <td><%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %></td>
            <td><%= link_to 'Show', tweet, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', tweet, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <br>

